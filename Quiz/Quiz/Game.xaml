<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Quiz.Game"
             x:Name="GamePage">
    <ContentPage.Content>
        <StackLayout>

            <ListView x:Name="QuestionsView" ItemSelected="Handle_ItemSelected">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout>
                                <Label FontSize="Medium" Text="{Binding question}"></Label>
                                
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Button x:Name="PointsView" Text="{Binding NumberOfPoints,Source={x:Reference GamePage},Mode=TwoWay}"></Button>
        </StackLayout>

        
    </ContentPage.Content>
</ContentPage>